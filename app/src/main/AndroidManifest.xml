<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appcutt.demo">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <application
        android:name=".application.MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/NoActionBarTheme">

        <activity
            android:name=".activity.HomeActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.PhotoDetailActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/NoActionBarTheme.Transparent" />

        <activity
            android:name=".activity.CeramicActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/ceramic"
            android:theme="@style/NoActionBarTheme.Transparent" />

        <activity
            android:name=".activity.FullActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/full"
            android:theme="@style/NoActionBarTheme.Transparent" />

        <activity
            android:name=".activity.PorcelainActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/porcelain"
            android:theme="@style/NoActionBarTheme.Transparent" />

        <activity
            android:name=".activity.RusticActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/rustic"
            android:theme="@style/NoActionBarTheme.Transparent" />

        <activity
            android:name=".activity.VitrifiedActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:label="@string/vetrified"
            android:theme="@style/NoActionBarTheme.Transparent" />

        <activity
            android:name=".activity.ImagePreviewActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/NoActionBarTheme.Transparent" />

        <meta-data
            android:name="com.crashlytics.ApiKey"
            android:value="eef593299f106222b116410ba972260f992134e5" />


    </application>

</manifest>
